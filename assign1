import Foundation

// Step 1
var firstName: String = "Ilyas"
var lastName: String = "Tolegen"
var birthYear: Int = 2003
let currentYear: Int = 2025
var age: Int = currentYear - birthYear
var isStudent: Bool = true
var height: Double = 1.78
var favoriteColor: String = "Blue"
var hometown: String = "Almaty"

// Step 2
var hobby: String = "Playing football"
var numberOfHobbies: Int = 4
var favoriteNumber: Int = 9
var isHobbyCreative: Bool = false
var secondHobby: String = "gaming"
var lovesSports: Bool = true

// Step 3
var lifeStory: String = """
My name is \(firstName) \(lastName). I am \(age) years old, born in \(birthYear).
I am currently a student. My height is \(height) meters. 
I enjoy \(hobby), which is a creative hobby: \(isHobbyCreative).
I also like \(secondHobby). I have \(numberOfHobbies) hobbies in total, and my favorite number is \(favoriteNumber).
My favorite color is \(favoriteColor), and I come from \(hometown).
Do I love sports? \(lovesSports).
"""

// Step 4
print(lifeStory)
